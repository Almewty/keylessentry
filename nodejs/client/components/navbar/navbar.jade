div.navbar.navbar-default.navbar-static-top(ng-controller='NavbarCtrl')
    div.container
        div.navbar-header
            button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='/', ng-hide='toggleEdit') {{name}}
            span.navbar-brand.fix-form#change-name-form(ng-show='toggleEdit')
                form.form-inline(ng-submit='updateName()')
                    input.form-control(type='text', ng-model='newName', focus-me-no-blur='toggleEdit')
                    button.btn.btn-primary(type='submit') Update
            | &nbsp;
            a.navbar-brand(href='/', ng-click='showEdit()')
                span.glyphicon.glyphicon-edit(aria-hidden='true')

        div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
            ul.nav.navbar-nav
                li(ng-repeat='item in menu', ng-class='{active: isActive(item.link)}')
                    a(ng-href='{{item.link}}') {{item.title}}