div(ng-include='"components/navbar/navbar.html"')

.container
    .row
        .col-lg-12
            h1.page-header Phones:
            ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='phone in phones')
                li
                    a(href='#', ng-click='showQr(phone)', ng-hide='phone.edit')
                        | {{phone.name}}
                        button.close(type='button', ng-click='deletePhone(phone)', stop-event='click') &times;
                    form(ng-show='phone.edit', ng-submit='updatePhone(phone)')
                        p.input-group
                            input.form-control(type='text', placeholder='New name', focus-me='phone.edit', ng-model='phone.newName', maxlength='30', ng-minlength='1', ng-maxlength='30', required)
                            span.input-group-btn
                                button.btn.btn-primary(type='submit') Update

    form.phone-form(name='newPhoneForm', ng-submit='addPhone()')
        p.input-group
            input.form-control(type='text', placeholder='Add a new phone here.', ng-model='phoneName', maxlength='30', ng-minlength='1', ng-maxlength='30', required)
            span.input-group-btn
                button.btn.btn-primary(type='submit') Add New

