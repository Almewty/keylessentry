div(ng-include='"components/navbar/navbar.html"')

.container
    .row
        .col-lg-12
            h1.page-header Phones:
            ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='phone in phones')
                li
                    a(href='#', ng-dblclick='phone.edit = true', ng-hide='phone.edit')
                        | {{phone.name}}
                        button.close(type='button', ng-click='deletePhone(phone)') ×
                    form(ng-show='phone.edit')
                        p.input-group
                            input.form-control(type='text', value='{{phone.name}}', placeholder='New name', focus-me='phone.edit')
                            span.input-group-btn
                                button.btn.btn-primary(type='submit', ng-click='updatePhone(phone)') Update

    form.phone-form
        p.input-group
            input.form-control(type='text', placeholder='Add a new phone here.', ng-model='phoneName')
            span.input-group-btn
                button.btn.btn-primary(type='submit', ng-click='addPhone()') Add New

