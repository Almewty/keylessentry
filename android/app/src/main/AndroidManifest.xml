<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.w_hs.keylessentry" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name="de.w_hs.keylessentry.KeylessEntryApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.w_hs.keylessentry.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.w_hs.keylessentry.activities.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="de.w_hs.keylessentry.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="w_hs.de.keylessentry.MainActivity" />
        </activity>
    </application>

</manifest>
