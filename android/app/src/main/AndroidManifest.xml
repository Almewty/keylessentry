<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.w_hs.keylessentry" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.w_hs.keylessentry.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.w_hs.keylessentry.activities.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="de.w_hs.keylessentry.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.w_hs.keylessentry.MainActivity" />
        </activity>
        <!--android:launchMode="singleTask"-->
        <activity
            android:name="de.w_hs.keylessentry.activities.AddDoorActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/title_activity_add_door"
            android:parentActivityName="de.w_hs.keylessentry.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" android:host="w-hs.de"
                    android:path="/keylessentry" />
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.w_hs.keylessentry.MainActivity" />
        </activity>
    </application>

</manifest>
